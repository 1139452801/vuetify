.morph-transition
  &-enter-active, &-leave-active
    .btn__content
      //opacity: 0

  &-enter-active
    animation: morph 1s

    .btn
      animation: morph-text 1s

  &-leave-active
    animation: morph-reverse 1s

@keyframes morph-text {
  0%, 70% {
    //opacity: 0
    color: rgba(0, 0, 0, 0)
  }

  100% {
    //opacity: 1
  }
}

@keyframes morph {
  0%, 27% {
    opacity: 0
  }

  28% {
    opacity: 1
    clip-path: circle(10%)
    transform: translateX(30%)
  }

  60% {
    clip-path: circle(30%)
  }

  70% {
    transform: translateX(0px)
  }

  100% {
    clip-path: circle(100%)
  }
}

@keyframes morph-reverse {
  30% {
    clip-path: circle(100%)
    transform: translateX(0%)
  }

  80% {
    opacity: 1
  }

  100% {
    clip-path: circle(10%)
    transform: translateX(30%)
    opacity: 0
  }
}

.activator-morph-transition
  &-enter-active, &-leave-active
    transform-origin: -25px -50px

    .btn__content
      opacity: 0

  &-enter-active
    animation: activator-morph-reverse 1s

  &-leave-active
    animation: activator-morph 1s

@keyframes activator-morph {
  0% {
    transform: rotate(0deg)
  }

  40% {
    transform: rotate(30deg)
    opacity: 1
  }

  45%, 100% {
    opacity: 0
    transform: rotate(30deg)
  }
}

@keyframes activator-morph-reverse {
  0%, 70% {
    opacity: 0
    transform: rotate(30deg)
  }

  80% {
    opacity: 1
  }

  100% {
    transform: rotate(0deg)
  }
}
