@import '../bootstrap'

.v-image
  position: relative
  overflow: hidden

  &__image,
  &__placeholder
    position: absolute
    top: 0
    left: 0
    width: 100%
    height: 100%

  &__image
    background-repeat: no-repeat

    &--preload
      filter: blur(2px)

    &--contain
      background-size: contain

    &--cover
      background-size: cover
